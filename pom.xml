<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.jnodes</groupId>
    <artifactId>jnodesOne</artifactId>
    <version>1.2</version>
    <packaging>jar</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.release>17</maven.compiler.release>
        <exec.mainClass>jnodes3clientse.Main</exec.mainClass>
    </properties>
    <dependencies>
        <!-- https://mvnrepository.com/artifact/org.snmp4j/snmp4j -->
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j</artifactId>
            <version>3.9.6</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/org.json/json -->
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20250107</version>
        </dependency>
        <dependency> 
            <groupId>org.projectlombok</groupId> 
            <artifactId>lombok</artifactId> 
            <version>1.18.42</version> 
            <scope>provided</scope> 
        </dependency>
        <!-- for command line argument parsing -->
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.10.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.shiro</groupId>
            <artifactId>shiro-core</artifactId>
            <version>1.9.0</version>
        </dependency>
    </dependencies>
    <build>
        <finalName>${project.artifactId}</finalName>
        <resources>
            <resource>
                <directory>src/main/images</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>jnodes3clientse.Main</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <appendAssemblyId>true</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>jlink-jre</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <!-- Use jlink from the same JDK running Maven -->
                            <executable>${java.home}${file.separator}bin${file.separator}jlink</executable>

                            <arguments>
                                <argument>--module-path</argument>
                                <argument>${java.home}${file.separator}jmods</argument>

                                <argument>--add-modules</argument>
                                <argument>java.base,java.logging,java.desktop</argument>

                                <argument>--output</argument>
                                <argument>${project.build.directory}${file.separator}jre-minimal</argument>

                                <argument>--strip-debug</argument>
                                <argument>--no-header-files</argument>
                                <argument>--no-man-pages</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <release>17</release>
                    <compilerArgs>
                        <arg>-Xlint:deprecation</arg>
                        <arg>-Xlint:unchecked</arg>
                    </compilerArgs>

                    <!-- IMPORTANT for Lombok -->
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>1.18.42</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <version>2.6.0</version>
                <executions>
                    <execution>
                        <id>wrap-with-launch4j</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <!-- Output EXE -->
                            <outfile>${project.build.directory}${file.separator}${project.artifactId}.exe</outfile>

                            <!-- Use the fat JAR produced by maven-assembly-plugin -->
                            <jar>${project.build.directory}${file.separator}${project.artifactId}-jar-with-dependencies.jar</jar>


                            <!-- GUI app (use 'console' if you want a console window) -->
                            <headerType>gui</headerType>

                            <!-- Entry point -->
                            <classPath>
                                <mainClass>${exec.mainClass}</mainClass>
                            </classPath>

                            <!-- Optional icon -->
                            <icon>src/main/images/jnodes.ico</icon>

                            <!-- Runtime next to EXE -->
                            <jre>
                                <path>%EXEDIR%\jre-minimal</path>
                                <minVersion>17</minVersion>
                                <!-- <bundledJre64Bit>true</bundledJre64Bit>  --> <!-- deprecated -->
                                <requires64Bit>true</requires64Bit>
                            </jre>

                            <!-- Windows version info must be x.x.x.x -->
                            <versionInfo>
                                <!-- If your version is 1.2, this becomes 1.2.0.0 -->
                                <fileVersion>${project.version}.0.0</fileVersion>
                                <productVersion>${project.version}.0.0</productVersion>
                                <txtFileVersion>${project.version}</txtFileVersion>
                                <fileDescription>${project.artifactId}</fileDescription>
                                <productName>${project.artifactId}</productName>
                                <internalName>${project.artifactId}</internalName>
                                <originalFilename>${project.artifactId}.exe</originalFilename>
                                <!-- Optional; avoids those "dummy value" warnings -->
                                <companyName>${project.organization.name}</companyName>
                                <copyright>Â© ${project.inceptionYear} ${project.organization.name}</copyright>
                            </versionInfo>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>